<div class="container">
  <div class="col-md-6">
    <%= simple_form_for @ingredient, remote: true do |f| %>
    <%= f.input :name, class: "ingredient_field" %>
    <%= f.button :submit %>
    <% end %>
  </div>

  <div class="col-md-6 text-center ingredients_list">
    <% @ingredients.order(:name).each do |i| %>
        <%= render partial: "ingredients/ingredient", locals: { ingredient: i } %>
    <% end %>
  </div>
</div>