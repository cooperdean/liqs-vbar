<div class="container">
  
  <%= simple_form_for @drink do |f| %>
  <%= f.input :name, placeholder: "Enter a drink name..." %>
  <%= f.input :description, placeholder: "Enter a description for the drink..." %>
  <%= f.button :submit %>

    <div class="row">
        
        <div id="ingredients" class="col-md-6">
          <h3>Add Ingredients</h3>
          <%= f.simple_fields_for :ingredients do |ingredient| %>
            <%= render 'ingredient_fields', :f => ingredient %>
          <% end %>
        <div class="links">
            <%= link_to_add_association 'Add Ingredient', f, :ingredients, class: "btn btn-default" %>
        </div>
      </div>

      <div id="directions" class="col-md-6">
          <h3>Add Directions</h3>
          <%= f.simple_fields_for :directions do |direction| %>
            <%= render 'direction_fields', :f => direction %>
          <% end %>
        <div class="links">
            <%= link_to_add_association 'Add Direction', f, :directions, class: "btn btn-default" %>
        </div>
      </div>

    </div>
  <% end %>
</div>